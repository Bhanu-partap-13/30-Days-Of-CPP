# Automatically normalize line endings
* text=auto
*.cpp text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.h text eol=lf
*.c text eol=lf
*.sh text eol=lf
*.py text eol=lf
*.pl text eol=lf
*.rb text eol=lf
*.java text eol=lf
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.json text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Don't normalize binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.wav binary

# Don't normalize files in .gitattributes
.gitattributes -text
